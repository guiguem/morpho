{
  "stan": {

  	 "name": "krypton_analysis",

	 "model":	{
	 	"file": "./krypton_analysis.stan",
		"cache": "./cache"
		},

	 "data": {
	 	"type": "data",
		"files": [
		    {
			"name": "./data/krypton_run.header.data", 
			"format":"R"
		    },
	 	    {
			"name" : "./results/test_generator.root", 
			"format" : "root",
			"tree" : "procTracks",
			"cut": "MinFrequency > 0 && ! IsCut",
			"branches" : [
				   {"name" : "MinFrequency", "stan_alias" : "freq_data"},
				   {"name" : "Slope", "stan_alias" : "dfdt_data"}
				   ]
		     }
		 ],
		"parameters": [
		      {
			"minFreq" : 24.2e9,
			"maxFreq" : 26.2e9,
			"fclock" : 24.2000e9,
			"gCoupling" : 0.00
		      }
		    ]
	},

	"run": {
	       "algorithim": "NUTS",
	       "iter": 2500,
	       "chain": 1,
	       "pars_off": ["TotalField", "TrappingField", "MainField", "SourceMean", "SourceWidth"]
	       },

	"plot_off": [
		{"variable": "TotalField"},
		{"variable": "TrappingField"},
		{"variable": "MainField"},
		{"variable": "SourceMean"},
		{"variable": "SourceWidth"}
		],

	"output": 
		  {
		   "name" : "./results/test_analysis.root",
		   "format" : "root",
		   "tree" : "stanAnalysis",
		   "branches" : [
		   	   {"variable" : "TotalField", "root_alias" : "TotalField"},
		   	   {"variable" : "TrappingField", "root_alias" : "TrappingField"},
		   	   {"variable" : "MainField", "root_alias" : "MainField"},
		   	   {"variable" : "gPower", "root_alias" : "gPower"},
		   	   {"variable" : "df", "root_alias" : "df"},
		   	   {"variable" : "muB", "root_alias" : "muB"},
		   	   {"variable" : "uCauchy", "root_alias" : "uCauchy"},
		   	   {"variable" : "SourceMean", "root_alias" : "SourceMean"},
		   	   {"variable" : "SourceWidth", "root_alias" : "SourceWidth"}
		    	   ]
		   }	   
   }

}
